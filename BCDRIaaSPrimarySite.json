{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "domainControllerDnsName": {
      "type": "string",
      "defaultValue": "bcdrdc1updateme",
      "minLength": 1
    }
  },
  "variables": {
    "BCDRVnetUpdateDNSTemplateURL": "https://raw.githubusercontent.com/deltadan/bcdr/master/BCDRVnetWithDNS.json",
    "BCDRIaaSSecondarySiteTemplateURL": "https://raw.githubusercontent.com/deltadan/bcdr/master/BCDRIaaSSecondarySite.json",
    "secondResourceGroup": "BCDRIaaSSecondarySite",
    "vnetID1": "[resourceId('Microsoft.Network/virtualNetworks', 'BCDRVNET')]",
    "BCDRVNetPrefix": "10.0.0.0/16",
    "BCDRVNetSubnet1Name": "GatewaySubnet",
    "BCDRVNetSubnet1Prefix": "10.0.0.0/24",
    "BCDRVNetSubnet2Name": "WEB",
    "BCDRVNetSubnet2Prefix": "10.0.1.0/24",
    "BCDRVNetSubnet3Name": "DATA",
    "BCDRVNetSubnet3Prefix": "10.0.2.0/24",
    "BCDRVNetSubnet4Name": "AD",
    "BCDRVNetSubnet4Prefix": "10.0.3.0/24",
    "InternalLoadBalancerName": "SQLAOGILB",
    "InternalLoadBalancerID": "[resourceId('Microsoft.Network/loadBalancers',variables('InternalLoadBalancerName'))]",
    "ExternalLoadBalancerName": "WWWEXTLB",
    "ExternalLoadBalancerPublicIPName": "WWWEXTLB-PIP",
    "ExternalLoadBalancerPublicIPDNSName": "[concat('bcdrprimarysitelb', uniqueString(resourceGroup().id))]",
    "ExternalLoadBalancerID": "[resourceId('Microsoft.Network/loadBalancers',variables('ExternalLoadBalancerName'))]",
    "ExternalLoadBalancerfrontEndIPConfigID": "[concat(variables('ExternalLoadBalancerID'),'/frontendIPConfigurations/LoadBalancerFrontEnd')]",
    "ExternalLoadBalancerPoolID": "[concat(variables('ExternalLoadBalancerID'),'/backendAddressPools/BackendPool1')]",
    "ExternalLoadBalancerProbeID": "[concat(variables('ExternalLoadBalancerID'),'/probes/tcpProbe')]",
    "ExternalLoadbalancerFrontEndIPConfigID": "[concat(variables('ExternalLoadbalancerID'),'/frontendIPConfigurations/LoadBalancerFrontEnd')]",
    "GatewayPublicIPName": "BCDRVNETGateway-PIP",
    "PrimaryGatewayName": "BCDRVNETGateway",
    "GatewaySubnetRef": "[concat(variables('vnetID1'),'/subnets/','GatewaySubnet')]",
    "bcdrstorageName": "[concat('bcdrstorage', uniqueString(resourceGroup().id))]",
    "bcdrstorageType": "Premium_LRS",
    "ADAVSETName": "ADAVSET",
    "WEBAVSETName": "WEBAVSET",
    "SQLAVSETName": "SQLAVSET",
    "BCDRDC1Name": "BCDRDC1",
    "BCDRDC1AdminUserName": "mcwadmin",
    "BCDRDC1AdminPassword": "demo@pass123",
    "BCDRDC1ImagePublisher": "MicrosoftWindowsServer",
    "BCDRDC1ImageOffer": "WindowsServer",
    "BCDRDC1WindowsOSVersion": "2016-Datacenter",
    "BCDRDC1OSDiskName": "BCDRDC1OSDisk",
    "BCDRDC1VmSize": "Standard_F2s",
    "BCDRDC1VnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'BCDRVNet')]",
    "BCDRDC1SubnetRef": "[concat(variables('BCDRDC1VnetID'), '/subnets/', variables('BCDRVNetSubnet4Name'))]",
    "BCDRDC1NicName": "[concat(variables('BCDRDC1Name'), '-NIC')]",
    "BCDRDC1-PUBIPName": "BCDRDC1-PIP",
    "SQLVM1Name": "SQLVM1",
    "SQLVM1AdminUserName": "mcwadmin",
    "SQLVM1AdminPassword": "demo@pass123",
    "SQLVM1ImagePublisher": "MicrosoftSQLServer",
    "SQLVM1ImageOffer": "SQL2017-WS2016",
    "SQLVM1WindowsOSVersion": "SQLDEV",
    "SQLVM1OSDiskName": "SQLVM1OSDisk",
    "SQLVM1VmSize": "Standard_F2s",
    "SQLVM1VnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'BCDRVNet')]",
    "SQLVM1SubnetRef": "[concat(variables('SQLVM1VnetID'), '/subnets/', variables('BCDRVNetSubnet3Name'))]",
    "SQLVM1NicName": "[concat(variables('SQLVM1Name'), '-NIC')]",
    "SQLVM2Name": "SQLVM2",
    "SQLVM2AdminUserName": "mcwadmin",
    "SQLVM2AdminPassword": "demo@pass123",
    "SQLVM2ImagePublisher": "MicrosoftSQLServer",
    "SQLVM2ImageOffer": "SQL2017-WS2016",
    "SQLVM2WindowsOSVersion": "SQLDEV",
    "SQLVM2OSDiskName": "SQLVM2OSDisk",
    "SQLVM2VmSize": "Standard_F2s",
    "SQLVM2VnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'BCDRVNet')]",
    "SQLVM2SubnetRef": "[concat(variables('SQLVM2VnetID'), '/subnets/', variables('BCDRVNetSubnet3Name'))]",
    "SQLVM2NicName": "[concat(variables('SQLVM2Name'), '-NIC')]",
    "WEBVM1Name": "WEBVM1",
    "WEBVM1AdminUserName": "mcwadmin",
    "WEBVM1AdminPassword": "demo@pass123",
    "WEBVM1ImagePublisher": "MicrosoftWindowsServer",
    "WEBVM1ImageOffer": "WindowsServer",
    "WEBVM1WindowsOSVersion": "2016-Datacenter",
    "WEBVM1OSDiskName": "WEBVM1OSDisk",
    "WEBVM1VmSize": "Standard_F2s",
    "WEBVM1VnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'BCDRVNet')]",
    "WEBVM1SubnetRef": "[concat(variables('WEBVM1VnetID'), '/subnets/', variables('BCDRVNetSubnet2Name'))]",
    "WEBVM1StorageAccountContainerName": "vhds",
    "WEBVM1NicName": "[concat(variables('WEBVM1Name'), '-NIC')]",
    "WEBVM2Name": "WEBVM2",
    "WEBVM2AdminUserName": "mcwadmin",
    "WEBVM2AdminPassword": "demo@pass123",
    "WEBVM2ImagePublisher": "MicrosoftWindowsServer",
    "WEBVM2ImageOffer": "WindowsServer",
    "WEBVM2WindowsOSVersion": "2016-Datacenter",
    "WEBVM2OSDiskName": "WEBVM2OSDisk",
    "WEBVM2VmSize": "Standard_F2s",
    "WEBVM2VnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'BCDRVNet')]",
    "WEBVM2SubnetRef": "[concat(variables('WEBVM2VnetID'), '/subnets/', variables('BCDRVNetSubnet2Name'))]",
    "WEBVM2StorageAccountContainerName": "vhds",
    "WEBVM2NicName": "[concat(variables('WEBVM2Name'), '-NIC')]",
    "WEBVM2JoinDomainScriptFolder": ".",
    "WEBVM2JoinDomainScriptFileName": "WEBVM2JoinDomain.ps1",
    "WEBVM2JoinDomainURL": "https://raw.githubusercontent.com/deltadan/bcdr/master/CustomScripts/WEBVM2JoinDomain.ps1",
    "NewForestScriptFolder": ".",
    "NewForestScriptFileName": "NewForest.ps1",
    "NewForestURL": "https://raw.githubusercontent.com/deltadan/bcdr/master/CustomScripts/NewForest.ps1",
    "SQLVM1ConfigArchiveFolder": ".",
    "SQLVM1ConfigArchiveFileName": "SQLVM1Config.zip",
    "SQLVM1ConfigURL": "https://github.com/deltadan/bcdr/blob/master/CustomScripts/SQLVM1Config.zip?raw=true",
    "SQLVM1JoinDomainScriptFolder": ".",
    "SQLVM1JoinDomainScriptFileName": "SQLVM1JoinDomain.ps1",
    "SQLVM1JoinDomainURL": "https://raw.githubusercontent.com/deltadan/bcdr/master/CustomScripts/SQLVM1JoinDomain.ps1",
    "SQLVM2ConfigArchiveFolder": ".",
    "SQLVM2ConfigArchiveFileName": "SQLVM2Config.zip",
    "SQLVM2ConfigURL": "https://github.com/deltadan/bcdr/blob/master/CustomScripts/SQLVM2Config.zip?raw=true",
    "SQLVM2JoinDomainScriptFolder": ".",
    "SQLVM2JoinDomainScriptFileName": "SQLVM2JoinDomain.ps1",
    "SQLVM2JoinDomainURL": "https://raw.githubusercontent.com/deltadan/bcdr/master/CustomScripts/SQLVM2JoinDomain.ps1",
    "WEBVM1JoinDomainScriptFolder": ".",
    "WEBVM1JoinDomainScriptFileName": "WEBVM1JoinDomain.ps1",
    "WEBVM1JoinDomainURL": "https://raw.githubusercontent.com/deltadan/bcdr/master/CustomScripts/WEBVM1JoinDomain.ps1"
  },
  "resources": [
    {
      "name": "BCDRVNET",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-10-01",
      "dependsOn": [],
      "tags": {
        "displayName": "BCDRVNet"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('BCDRVNetPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('BCDRVNetSubnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('BCDRVNetSubnet1Prefix')]"
            }
          },
          {
            "name": "[variables('BCDRVNetSubnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('BCDRVNetSubnet2Prefix')]"
            }
          },
          {
            "name": "[variables('BCDRVNetSubnet3Name')]",
            "properties": {
              "addressPrefix": "[variables('BCDRVNetSubnet3Prefix')]"
            }
          },
          {
            "name": "[variables('BCDRVNetSubnet4Name')]",
            "properties": {
              "addressPrefix": "[variables('BCDRVNetSubnet4Prefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('bcdrstorageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-10-01",
      "sku": {
        "name": "[variables('bcdrstorageType')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "bcdrstorage"
      },
      "kind": "Storage"
    },
    {
      "name": "[variables('BCDRDC1NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-10-01",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', 'BCDRVNet')]",
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('BCDRDC1-PUBIPName'))]"
      ],
      "tags": {
        "displayName": "BCDRDC1Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('BCDRDC1SubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('BCDRDC1-PUBIPName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[variables('BCDRDC1Name')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-12-01",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', variables('BCDRDC1NicName'))]",
        "[concat('Microsoft.Compute/availabilitySets/', variables('ADAVSETName'))]"
      ],
      "tags": {
        "displayName": "BCDRDC1"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('BCDRDC1VmSize')]"
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('ADAVSETName'))]"
        },
        "osProfile": {
          "computerName": "[variables('BCDRDC1Name')]",
          "adminUsername": "[variables('BCDRDC1AdminUsername')]",
          "adminPassword": "[variables('BCDRDC1AdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('BCDRDC1ImagePublisher')]",
            "offer": "[variables('BCDRDC1ImageOffer')]",
            "sku": "[variables('BCDRDC1WindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "diskSizeGB": 1023
          },
          "dataDisks": [
            {
              "diskSizeGB": 1023,
              "lun": 0,
              "createOption": "Empty"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('BCDRDC1NicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "NewForest",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2017-12-01",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', variables('BCDRDC1Name'))]"
          ],
          "tags": {
            "displayName": "NewForest"
          },
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.4",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": [
                "[concat(variables('NewForestURL'))]"
              ],
              "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', variables('NewForestScriptFolder'), '/', variables('NewForestScriptFileName'))]"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('BCDRDC1-PUBIPName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-10-01",
      "dependsOn": [],
      "tags": {
        "displayName": "BCDRDC1-PUBIP"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[parameters('domainControllerDnsName')]"
        }
      }
    },
    {
      "name": "BCDRVnetUpdateDNS",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines/extensions', variables('BCDRDC1Name'), 'NewForest')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('BCDRVnetUpdateDNSTemplateURL')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "name": "[variables('SQLVM1NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-10-01",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', 'BCDRVNet')]",
        "[concat('Microsoft.Resources/deployments/', 'BCDRVnetUpdateDNS')]"
      ],
      "tags": {
        "displayName": "SQLVM1Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('SQLVM1SubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[concat(variables('InternalLoadBalancerID'), '/backendAddressPools/BackendPool1')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[variables('SQLVM1Name')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-12-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'BCDRVnetUpdateDNS')]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('bcdrstorageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('SQLVM1NicName'))]",
        "[concat('Microsoft.Compute/availabilitySets/', variables('SQLAVSETName'))]"
      ],
      "tags": {
        "displayName": "SQLVM1"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('SQLVM1VmSize')]"
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('SQLAVSETName'))]"
        },
        "osProfile": {
          "computerName": "[variables('SQLVM1Name')]",
          "adminUsername": "[variables('SQLVM1AdminUsername')]",
          "adminPassword": "[variables('SQLVM1AdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('SQLVM1ImagePublisher')]",
            "offer": "[variables('SQLVM1ImageOffer')]",
            "sku": "[variables('SQLVM1WindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "diskSizeGB": 1023
          },
          "dataDisks": [
            {
              "diskSizeGB": 1023,
              "lun": 0,
              "createOption": "Empty"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('SQLVM1NicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "SQLVM1Config",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2017-12-01",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', variables('SQLVM1Name'))]"
          ],
          "tags": {
            "displayName": "SQLVM1Config"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.9",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "configuration": {
                "url": "[concat(variables('SQLVM1ConfigURL'))]",
                "script": "SQLVM1Config.ps1",
                "function": "Main"
              },
              "configurationArguments": {
                "nodeName": "[variables('SQLVM1Name')]"
              }
            }
          }
        },
        {
          "name": "JoinDomainSQLVM1",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2017-12-01",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', variables('SQLVM1Name'))]",
            "[resourceId('Microsoft.Compute/virtualMachines/extensions', variables('SQLVM1Name'), 'SQLVM1Config')]"
          ],
          "tags": {
            "displayName": "JoinDomainSQLVM1"
          },
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.4",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": [
                "[variables('SQLVM1JoinDomainURL')]"
              ],
              "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', variables('SQLVM1JoinDomainScriptFolder'), '/', variables('SQLVM1JoinDomainScriptFileName'))]"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('SQLVM2NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-10-01",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', 'BCDRVNet')]",
        "[concat('Microsoft.Resources/deployments/', 'BCDRVnetUpdateDNS')]"
      ],
      "tags": {
        "displayName": "SQLVM2Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('SQLVM2SubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[concat(variables('InternalLoadBalancerID'), '/backendAddressPools/BackendPool1')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[variables('SQLVM2Name')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-12-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'BCDRVnetUpdateDNS')]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('bcdrstorageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('SQLVM2NicName'))]",
        "[concat('Microsoft.Compute/availabilitySets/', variables('SQLAVSETName'))]"
      ],
      "tags": {
        "displayName": "SQLVM2"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('SQLVM2VmSize')]"
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('SQLAVSETName'))]"
        },
        "osProfile": {
          "computerName": "[variables('SQLVM2Name')]",
          "adminUsername": "[variables('SQLVM2AdminUsername')]",
          "adminPassword": "[variables('SQLVM2AdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('SQLVM2ImagePublisher')]",
            "offer": "[variables('SQLVM2ImageOffer')]",
            "sku": "[variables('SQLVM2WindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "diskSizeGB": 1023
          },
          "dataDisks": [
            {
              "diskSizeGB": 1023,
              "lun": 0,
              "createOption": "Empty"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('SQLVM2NicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "SQLVM2Config",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2017-12-01",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', variables('SQLVM2Name'))]"
          ],
          "tags": {
            "displayName": "SQLVM2Config"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.9",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "configuration": {
                "url": "[concat(variables('SQLVM2ConfigURL'))]",
                "script": "SQLVM2Config.ps1",
                "function": "Main"
              },
              "configurationArguments": {
                "nodeName": "[variables('SQLVM2Name')]"
              }
            }
          }
        },
        {
          "name": "JoinDomainSQLVM2",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2017-12-01",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', variables('SQLVM2Name'))]",
            "[resourceId('Microsoft.Compute/virtualMachines/extensions', variables('SQLVM2Name'), 'SQLVM2Config')]"
          ],
          "tags": {
            "displayName": "JoinDomainSQLVM2"
          },
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.4",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": [
                "[variables('SQLVM2JoinDomainURL')]"
              ],
              "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', variables('SQLVM2JoinDomainScriptFolder'), '/', variables('SQLVM2JoinDomainScriptFileName'))]"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('WEBVM1NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-10-01",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', 'BCDRVNet')]",
        "[concat('Microsoft.Resources/deployments/', 'BCDRVnetUpdateDNS')]"
      ],
      "tags": {
        "displayName": "WEBVM1Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('WEBVM1SubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[concat(variables('ExternalLoadBalancerID'), '/backendAddressPools/BackendPool1')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[variables('WEBVM1Name')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-12-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'BCDRVnetUpdateDNS')]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('bcdrstorageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('WEBVM1NicName'))]",
        "[concat('Microsoft.Compute/availabilitySets/', variables('WEBAVSETName'))]"
      ],
      "tags": {
        "displayName": "WEBVM1"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('WEBVM1VmSize')]"
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('WEBAVSETName'))]"
        },
        "osProfile": {
          "computerName": "[variables('WEBVM1Name')]",
          "adminUsername": "[variables('WEBVM1AdminUsername')]",
